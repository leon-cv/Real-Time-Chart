{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2022",
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ]
    }
}